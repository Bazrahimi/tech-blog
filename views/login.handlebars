<section class="login-page mt-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="form-heading text-center mb-4">
                    <h1>Log In</h1>
                </div>
                <div class="form-section">
                    <form class="login-form">
                        <div class="mb-3">
                            <label for="username-login" class="form-label">Username</label>
                            <input type="text" class="form-control" id="username-login" required />
                        </div>
                        <div class="mb-3">
                            <label for="password-login" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password-login" required />
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-block">Log In!</button>
                        </div>
                    </form>
                </div>
                <div class="mt-3 text-center">
                    <a href="/signup" class="sign-in-link">sign up instead</a>
                </div>
            </div>
        </div>
    </div>
</section>
